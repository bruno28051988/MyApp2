<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/loteria"
    android:alpha="0.8">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="152dp"
        android:alpha="0.8"
        android:background="@color/white"
        android:fontFamily="serif"
        android:text="Simulador de Jogo"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:alpha="0.8"
        android:id="@+id/imageView5"
        android:layout_width="135dp"
        android:layout_height="140dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:srcCompat="@drawable/maodinheiro" />

    <ImageButton
        android:id="@+id/img_mega"
        android:layout_width="289dp"
        android:layout_height="67dp"
        android:layout_marginTop="48dp"
        android:background="@color/mega"
        android:scaleType="centerCrop"
        android:onClick="megasena"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView5"
        app:srcCompat="@drawable/megasena" />

    <ImageButton
        android:id="@+id/img_quina"
        android:layout_width="289dp"
        android:layout_height="67dp"
        android:layout_marginTop="16dp"
        android:background="@color/mega"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_mega"
        app:srcCompat="@drawable/quina" />

    <ImageButton
        android:id="@+id/img_loto"
        android:layout_width="289dp"
        android:layout_height="67dp"
        android:layout_marginTop="16dp"
        android:background="@color/mega"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_quina"
        app:srcCompat="@drawable/lotofacil" />

</androidx.constraintlayout.widget.ConstraintLayout>